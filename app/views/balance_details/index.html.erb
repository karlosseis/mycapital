<h2 class = "page-header">
  <%= t(:'simple_form.labels.balance_detail.lista_titulo') %>
</h2>  

<table>
  <thead>
    <tr>
      <th><%= t(:'simple_form.labels.balance_detail.name') %></th>
      <th style="text-align:right"><%= t(:'simple_form.labels.balance_detail.amount') %></th>  
      <th><%= t(:'simple_form.labels.balance_detail.account') %></th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balance_details.each do |balance_detail| %>
      <tr>
        <td><%= balance_detail.name %></td>
        <td style="text-align:right"><%= balance_detail.amount %></td>
        <td><%= balance_detail.account %></td>
        <td><%= link_to 'Show', balance_detail %></td>
        <td><%= link_to 'Edit', edit_balance_detail_path(balance_detail) %></td>
        <td><%= link_to 'Destroy', balance_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Balance detail', new_balance_detail_path %>
