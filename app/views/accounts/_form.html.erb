<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>    
    <%= f.input :account_type_id, collection: current_user.accounts.account_type_ids.keys, include_blank: false %>
    <%= f.association :bank, collection: current_user.banks %>   
  </div>


  <div class="row">    
      <div class="col-md-10 form-actions" >

            <input type="submit" class="btn btn-success"   value=<%= t("save") %> >
            <%= link_to t("cancel"), @account, :class => "btn btn-info", :style=>'color:#FFFFFF;' %>            
      </div>
    <div class="col-md-2 text-right form-actions" >        
            <%= link_to t("destroy"), @account,  :class => "btn btn-danger", :style=>'color:#FFFFFF;' , method: :delete, data: { confirm: t("are_you_sure") } %>    
      </div>   
  </div>

<% end %>
