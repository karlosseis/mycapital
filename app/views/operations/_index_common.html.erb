
    <table class="uk-table uk-table-middle uk-table-divider">
    <thead>
      <tr>            
        <th class = "uk-text-center"><%=t(:'simple_form.labels.operation.operation_date')%></th>      
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.amount') %></th>
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.quantity') %></th>
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.price') %></th>        
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.commission') %></th>
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.fee') %></th>
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.origin_price') %></th>        
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.exchange_rate') %></th>   
        <th class = "uk-text-right"><%=t(:'simple_form.labels.operation.broker') %></th>      
      </tr>
    </thead>
     <tbody>
      <% @company.operations.where("operationtype_id=" + operationtype_id.to_s).order(operation_date: :desc).each do |operation| %>
        <tr>          
   <td class = "uk-text-center"><a class="uk-text-middle uk-link-text" target = "_blank" href="<%= edit_company_operation_path(@company, operation) %>"><%= I18n.l(operation.operation_date) %></a></td>
          
          <td class = "uk-text-right"><%= @company.number_currency_operations(operation.amount) %></td>        
          <td class = "uk-text-right"><%= number_with_delimiter(operation.quantity) %></td>
          <td class = "uk-text-right"><%= @company.number_currency_operations(operation.price) %></td>   
          <td class = "uk-text-right"><%= @company.number_currency_operations(operation.commission) %></td>   
          <td class = "uk-text-right"><%= @company.number_currency_operations(operation.fee) %></td>   
          <td class = "uk-text-right"><%= operation.origin_price_formatted %></td>                            
          <td class = "uk-text-right"><%= number_with_delimiter(operation.exchange_rate) %></td>
          <td class = "uk-text-right"><%= operation.broker %></td> 
 
               
        </tr>
      <% end %>
    </tbody>
    </table>

