<%= simple_form_for :search,  url: yahoo_tickers_path , :method => :get, id: "search-form" do |f| %>
    <%= f.input :search, :autofocus => true ,:label => t(:'simple_form.labels.yahoo_ticker.search') %>
    <%= f.submit t(:'simple_form.labels.yahoo_ticker.search_btn'),  :class =>"btn btn-primary" %>
<% end %>



     <%= paginate(@yahoo_tickers) %>
