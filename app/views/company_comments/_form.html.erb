<%= simple_form_for([@company,@company_comment], html: { autocomplete: 'off' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">  	  	
  	<%= f.input :date_comment , as: :date, html5: true %>
    <%= f.input :comment %>
    <%= f.input( :url)%> 
  </div>

  <div class="form-actions">  
    <input type="submit" class="btn btn-success" value=<%= t("save") %> >
    <%= link_to  t("cancel") , company_path(@company_comment.company), :class => "btn btn-info", :style=>'color:#FFFFFF;' %>   
  </div>
<% end %>
