<p id="notice"><%= notice %></p>

<h1>Listing Company Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Url</th>
      <th>Company</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.company_comments.each do |company_comment| %>
      <tr>
        <td><%= company_comment.comment %></td>
        <td><%= company_comment.url %></td>
        <td><%= company_comment.company %></td>
        <td><%= company_comment.user %></td>
        <td><%= link_to 'Show', company_comment %></td>
        <td><%= link_to 'Edit', edit_company_comment_path(company_comment) %></td>
        <td><%= link_to 'Destroy', company_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

