
<div class="row">    
    <div class="col-md-10" >
 <h2 class = "page-header">
  <%= t(:'list_companies') %>
</h2>      
       
     
    </div>
     <div class="col-md-2 text-right form-actions" >  
         <br> <br>      
         <%= link_to  t(:'new_company') , yahoo_tickers_path ,  :class => "btn btn-primary", :style=>'color:#FFFFFF;' %>       
             
    </div>    
</div>



<table class="table  table-striped">
  <thead>
    <tr>
      <th style="text-align:left"><%= t(:'.name') %></th>
      <th style="text-align:center"><%= t(:'simple_form.labels.company.symbol') %></th>
      <th style="text-align:right"><%= t(:'simple_form.labels.company.share_price') %></th>      
      <th style="text-align:right"><%= t(:'simple_form.labels.company.date_share_price') %></th>      
      <th style="text-align:left"><%= t(:'simple_form.labels.company.stockexchange') %></th>
      <th style="text-align:left"><%= t(:'simple_form.labels.company.sector') %></th>
      
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td style="text-align:left"><%= link_to company.name, company %></td>
        <td style="text-align:center"><%= company.symbol %></td>        
        <td style="text-align:right"><%= company.share_price_formatted %></td>   
        <td style="text-align:right"><%= company.date_share_price_formatted %></td>
        <td style="text-align:left"><%= company.stockexchange %></td>
        <td style="text-align:left"><%= company.sector %></td>          
      </tr>
    <% end %>
  </tbody>
</table>

<br>


