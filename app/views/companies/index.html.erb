<p id="notice"><%= notice %></p>

<h1><%= t(:'list_companies') %></h1>

<%= link_to  t(:'new_company') , new_company_path %>

<table class="table  table-striped">
  <thead>
    <tr>
      <th><%= t(:'.name') %></th>
      <th><%= t(:'simple_form.labels.company.symbol') %></th>
      <th><%= t(:'simple_form.labels.company.share_price') %></th>
      <th><%= t(:'simple_form.labels.company.currency') %></th>
      <th><%= t(:'simple_form.labels.company.date_share_price') %></th>      
      <th><%= t(:'simple_form.labels.company.stockexchange') %></th>
      <th><%= t(:'simple_form.labels.company.sector') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.symbol %></td>        
        <td><%= company.share_price %></td>
        <td><%= company.stockexchange.currency.name %></td>        
        <td><%= company.date_share_price_formatted %></td>
        <td><%= company.stockexchange %></td>
        <td><%= company.sector %></td>          
      </tr>
    <% end %>
  </tbody>
</table>

<br>


