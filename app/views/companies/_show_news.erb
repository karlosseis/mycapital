
  <% news = @company.news %>
  <% contador = 0 %>
  <% unless news.nil? %>
      
      <% news.each do |p|     %>     
        
        
             
        
         


          <div class="uk-card uk-card-small uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
              <div class="uk-card-media-left uk-cover-container">
                  <img src="<%= p["image"]%>" alt="" uk-cover>
                  <canvas width="200" height="100"></canvas>
              </div>
              <div>
                  <div class="uk-card-body">
                      

                      <p class="uk-text-lighter"><%= format_date(Date.strptime((p["datetime"].to_f / 1000).to_s, '%s')) %> - <%= p["source"] %> </p> 
                      <li><a href=<%= p["url"]%> target = "_blank"><%= p["headline"]%></a></li> 
 
 
 
                      <p class="uk-text-normal"><%= p["summary"][0...250]  %> </p>
                      
                  </div>
              </div>
          </div>
          <% contador = contador + 1 %>
          <% if (contador > 3) then break end %>
      <% end %>
  <% end %>
