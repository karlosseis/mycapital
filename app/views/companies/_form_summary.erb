        </div>

        <div class="row">

         <div class="col-md-6 text-right"><%= t(:'simple_form.labels.company.ampliated_sum') %>:</div>
         <div class="col-md-6 text-right"><strong><%=  number_to_currency(@company.ampliated_sum) %></strong></div>    
      
        </div>

        <div class="row">
          <div class="col-md-6 text-right"><%= t(:'simple_form.labels.company.sold_sum') %>:</div>
