
  <div class="row">
      <div class="col-md-4">  

        <div class="row">
          <div class="col-md-6 text-right"><%= t(:'simple_form.labels.company.shares_sum') %>:</div>
          <div class="col-md-6 text-right"><strong><%= number_with_delimiter(@company.shares_sum.round(0)) %></strong></div>    

        </div>
     

        <div class="row">
         <div class="col-md-6 text-right"> <%= t(:'simple_form.labels.company.estimated_benefit_global_currency') %>:</div>
         <div class="col-md-6 text-right"><strong>
            <% if @company.estimated_benefit_global_currency.to_f  >= 0 %>
              <font color="#009933"><%=  number_to_currency(@company.estimated_benefit_global_currency)  %></font>
          <% else %>
              <font color="#ff0000"><%=  number_to_currency(@company.estimated_benefit_global_currency)  %></font>
          <% end %>      
          </strong>
          </div>      
      
        </div>

        <div class="row">
          <div class="col-md-6 text-right"></div>
          <div class="col-md-6 text-right"><strong><small>(<%=  number_to_percentage(@company.perc_estimated_benefit_global_currency, precision: 2)  %>)</small></strong></div>     


        </div>

        <div class="row">
          <div class="col-md-6 text-right"> <%= t(:'simple_form.labels.company.invested_sum') %>:</div>
