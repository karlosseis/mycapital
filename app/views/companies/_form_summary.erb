        </div>



        <div class="row">
          <div class="col-md-6 text-right"> <%= t(:'simple_form.labels.company.estimated_value_global_currency') %>:</div>
          <div class="col-md-6 text-right"><strong><%=  number_to_currency(@company.estimated_value_global_currency)  %></strong></div>    

        </div>

      </div>


      <div class="col-md-4">

