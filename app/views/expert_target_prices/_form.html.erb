<%= simple_form_for([@company, @expert_target_price], html: { autocomplete: 'off' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_target_price , as: :date, html5: true %>
    <%= f.input :target_price_1 %>
    <%= f.input :target_price_2 %>    
    <%= f.association :reference_web, collection: current_user.reference_webs %>  
    <%= f.input :url %>     
  </div>

  <div class="form-actions">  
    <input type="submit" class="btn btn-success" value=<%= t("save") %> >
    <%= link_to  t("cancel") , company_path(@expert_target_price.company), :class => "btn btn-info", :style=>'color:#FFFFFF;' %>   
  </div>
<% end %>
