<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->
 <h2 class = "page-header">Editar usuario</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
<!--     <%= f.input :permission_level %> -->

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, hint: "déjala en blanco si no la quieres cambiar", autocomplete: "off", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: 'necesitamos tu contraseña actual para confirmar los cambios', required: true %>
  

  </div>

  <div class="form-actions">
     <%= f.submit "Actualizar datos",  :class =>"btn btn-primary" %>

  </div>




<% end %>

<br>
<h4>Cancelar cuenta </h4>

<p>¿No te convence? <%= link_to "Cancela tu cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>

<br>
<%= link_to "Atrás", :back %>
