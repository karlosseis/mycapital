<table  id="myTable" class="table  table-striped">
  <thead>
    <tr>
      <th></th>
      <th style="text-align:left"><%= t(:'simple_form.labels.company.company') %></th>
      <th style="text-align:center"><%= t(:'simple_form.labels.company.symbol') %></th>
      <th style="text-align:right"><%= t(:'simple_form.labels.company.share_price') %></th>              
      <th style="text-align:right"><%= t(:'simple_form.labels.company.var_percent') %></th>            
      <th style="text-align:right"><%= t(:'simple_form.labels.company.perc_dividend_last_result') %></th>                    
      <th style="text-align:left"><%= t(:'simple_form.labels.company.stockexchange') %></th>      
      <th style="text-align:right"><%= t(:'simple_form.labels.company.target_price_1') %></th>
      <th style="text-align:right"><%= t(:'simple_form.labels.company.porc_dif_target_price') %></th>
    </tr>
  </thead>

  <tbody>
    <% companies_color.each do |company| %>
      <tr class=<%= row_color %>>
<td>          <% if company.porc_dif_target_price.to_f <= 2 %>
            *
            <span class="glyphicon glyphicon-screenshot" style="color:black" aria-hidden="true"></span>
          <% end %>  </td>
        <td style="text-align:left"><%= link_to company.name, company %></td>
        <td style="text-align:center"><a href=<%= company.url_google_finance %>  target = "_blank"><%= company.symbol %></a></td>
        <td style="text-align:right"><%= company.stock_price_formatted %></td>                            
        <td style="text-align:right">    
          <% if company.var_percent.to_f >= 0 %>
            <font color="#009933"><%= number_to_percentage(company.var_percent, precision: 2) %></font>
          <% else %>
              <font color="#ff0000"><%= number_to_percentage(company.var_percent, precision: 2) %></font>
          <% end %>     
       </td>          
        <td style="text-align:right"><%= number_to_percentage(company.perc_dividend_last_result, precision: 2) %></td>          
        
        <td style="text-align:left"><%= company.stockexchange %></td>         
        <td style="text-align:right"><%= company.target_price_1_formatted %></td>          
        <td style="text-align:right"><%= number_to_percentage(company.porc_dif_target_price, precision: 2) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

