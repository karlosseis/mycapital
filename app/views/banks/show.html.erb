<p>
  <strong> <%= t(:'simple_form.labels.banks.name') %></strong>
  <%= @bank.name %>
</p>


<table class="table  table-striped">
  <thead>
    <tr>
      <th><%= t(:'simple_form.labels.accounts.name') %></th>
      <th><%= t(:'simple_form.labels.accounts.account_type_id') %></th>
      <th><%= t(:'simple_form.labels.accounts.bank') %></th>     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank.accounts.each do |account| %>
      <tr>
        <td style="text-align:left"><%= link_to account.name, account %></td>   
        <td><%= account.account_type_id %></td>
        <td><%= account.bank %></td>
        <td><%= link_to t("edit"), edit_account_path(account), :class => 'btn btn-sm btn-primary', :style=>'color:#FFFFFF;'  %> </td>
        <td><%= link_to t("destroy"), account, method: :delete, data: { confirm: 'Seguro que desear borrarlo?' }, :class => 'btn btn-sm btn-danger btn-xs', :style=>'color:#FFFFFF;'  %></td>         
      </tr>
    <% end %>
  </tbody>
</table>

